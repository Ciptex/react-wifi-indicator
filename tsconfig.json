{
  "compilerOptions": {
    "outDir": "dist",
    "declarationDir": "types",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "emitDeclarationOnly": true
  },
  "include": [ "./src/**/*" ],
  "exclude": [
    "node_modules",
    "dist",
    "./**/*.test.ts",
    "./**/*.stories.tsx",
    "./**/*.test.tsx",
    "./**/__mocks__/*.ts",
    "./**/__mocks__/*.tsx",
    "./**/__stories__/*.ts",
    "./**/__stories__/*.tsx",
  ]
}